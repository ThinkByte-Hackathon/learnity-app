        // API'den gelen message string'ini parse eden fonksiyon
        function parseQuestionsFromMessage(message) {
            const questions = [];
            const answers = [];
            
            // SorularÄ± ayÄ±r (markdown formatÄ±ndan)
            const questionBlocks = message.split(/\*\*Soru \d+.*?\*\*/).filter(block => block.trim());
            
            // Cevap anahtarÄ± iki farklÄ± formatta olabilir:
            // 1. "DoÄŸru cevaplar sÄ±rasÄ±yla a, d, c'dir."
            // 2. "**Cevap AnahtarÄ±:**\nSoru 1:  c) uÃ§uyor\nSoru 2:  d) Belirsiz isim ..."
            let answerLetters = [];
            let answerDetails = [];
            
            // 1. Format: DoÄŸru cevaplar sÄ±rasÄ±yla ...
            const match1 = message.match(/DoÄŸru cevaplar.*?([a-e](,\s*[a-e])*)/i);
            if (match1) {
                answerLetters = match1[1].split(',').map(s => s.trim());
            }
            // 2. Format: Cevap AnahtarÄ±: Soru 1:  c) ...
            else {
                const match2 = message.match(/Cevap AnahtarÄ±:(.|\n)+/i);
                if (match2) {
                    // Her satÄ±rÄ± bul
                    const lines = match2[0].split('\n').filter(l => l.match(/Soru \d+:/));
                    lines.forEach(line => {
                        // Soru 1:  c) uÃ§uyor
                        const m = line.match(/Soru \d+:\s*([a-e])\)/i);
                        if (m) {
                            answerLetters.push(m[1]);
                        } else {
                            // Soru 1:  d) Belirsiz isim ( ... )
                            const m2 = line.match(/Soru \d+:\s*([a-e])/i);
                            if (m2) answerLetters.push(m2[1]);
                        }
                    });
                }
            }
            
            questionBlocks.forEach((block, index) => {
                if (block.trim()) {
                    // Soru metnini ve ÅŸÄ±klarÄ± ayÄ±r
                    const lines = block.split('\n').filter(line => line.trim());
                    
                    let questionText = '';
                    let options = [];
                    let correctAnswer = '';
                    
                    lines.forEach(line => {
                        line = line.trim();
                        if (line && !line.startsWith('a)') && !line.startsWith('b)') && 
                            !line.startsWith('c)') && !line.startsWith('d)') && 
                            !line.startsWith('e)') && !line.includes('DoÄŸru cevaplar') && !line.includes('Cevap AnahtarÄ±')) {
                            questionText += line + ' ';
                        } else if (line.match(/^[a-e]\)/)) {
                            options.push(line);
                        }
                    });
                    
                    if (answerLetters && answerLetters[index]) {
                        correctAnswer = answerLetters[index];
                    }
                    
                    if (questionText && options.length >= 4) {
                        questions.push({
                            id: index + 1,
                            text: questionText.trim(),
                            options: options
                        });
                        answers.push(correctAnswer);
                    }
                }
            });
            
            return { questions, answers };
        }

