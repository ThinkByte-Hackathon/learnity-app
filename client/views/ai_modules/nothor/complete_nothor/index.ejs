    <script>
        // Subject Classification and Management
        let currentEditingNoteId = null;
        
        const subjectKeywords = {
            matematik: ['matematik', 'sayÄ±', 'iÅŸlem', 'denklem', 'geometri', 'algebra', 'hesap', 'Ã§arpÄ±m', 'toplam', 'integral', 'tÃ¼rev', 'fonksiyon'],
